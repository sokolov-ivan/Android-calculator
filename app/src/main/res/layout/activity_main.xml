<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fab"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <EditText
            android:id="@+id/number_field_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <Button
            android:id="@+id/test_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="тестовая кнопка"></Button>

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <Button
            android:id="@+id/two_activity_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="кнопка для второй активити"></Button>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:columnCount="4">

        <Button
            android:id="@+id/one_button"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="1" />

        <Button
            android:id="@+id/two_button"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="2" />

        <Button
            android:id="@+id/three_button"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="3" />

        <Button
            android:id="@+id/delete_Click_button"
            android:layout_rowSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="3dp"
            android:text="delete" />

        <Button
            android:id="@+id/four_button"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="4" />

        <Button
            android:id="@+id/five_button"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="5" />

        <Button
            android:id="@+id/six_button"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="6" />

        <Button
            android:layout_rowSpan="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="3dp"
            android:text="=" />

        <Button
            android:id="@+id/seven_button"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="7" />

        <Button
            android:id="@+id/eight_button"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="8" />

        <Button
            android:id="@+id/nine_button"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="9" />

        <Button
            android:id="@+id/zero_button"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="3dp"
            android:text="0" />

        <Button
            android:id="@+id/point_button"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="." />

        <Button
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="+" />

        <Button
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="-" />

        <Button
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="*" />

        <Button
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:text="/" />


    </GridLayout>


</LinearLayout>









